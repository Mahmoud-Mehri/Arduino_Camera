<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/picItemBack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/picItemNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:text="3" />

        <TextView
            android:id="@+id/picItemDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:text="10/03/1397" />

        <TextView
            android:id="@+id/picItemTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:text="10:23:32" />

        <TextView
            android:id="@+id/picItemSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:text="12456 kb" />

        <ImageButton
            android:id="@+id/picItemShowBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_show_selector"/>

        <ImageButton
            android:id="@+id/picItemDelBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_delete_selector"/>

    </LinearLayout>

</android.support.v7.widget.CardView>